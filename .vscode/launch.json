{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug main.exe (GDB, MinGW64)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/main.exe",
      "cwd": "${fileDirname}",
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
      "preLaunchTask": "Build with g++ (C++20)"
    },
    {
      "name": "Build & Debug active file (C++20)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
      "setupCommands": [
        { "description": "Enable pretty-printing for gdb", "text": "-enable-pretty-printing", "ignoreFailures": true },
        { "description": "Set Disassembly Flavor to Intel", "text": "-gdb-set disassembly-flavor intel", "ignoreFailures": true }
      ],
      "preLaunchTask": "Build with g++ (C++20)"
    }
  ]
}
